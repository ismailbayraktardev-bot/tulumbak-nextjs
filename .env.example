# Environment Variables Template
# Copy this file to .env.development or .env.production and fill in the values

# Database Configuration
POSTGRES_DB=tulumbak_db
POSTGRES_USER=tulumbak_user
POSTGRES_PASSWORD=your_secure_password
DATABASE_URL=postgresql://tulumbak_user:your_secure_password@localhost:5432/tulumbak_db

# Redis Configuration
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SESSION_TIMEOUT=24h

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Feature Flags
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_REALTIME_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_PAYMENTS_ENABLED=true
NEXT_PUBLIC_SEARCH_ENABLED=true

# Payment Providers
NEXT_PUBLIC_STRIPE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYTR_MERCHANT_ID=your_paytr_merchant_id
PAYTR_MERCHANT_KEY=your_paytr_merchant_key
PAYTR_MERCHANT_SALT=your_paytr_merchant_salt

# Email Configuration
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# SMS Configuration
NETGSM_USER=your_netgsm_user
NETGSM_PASSWORD=your_netgsm_password
NETGSM_HEADER=YOURBRAND

# File Storage
MINIO_ROOT_USER=your_minio_user
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=tulumbak-storage
MINIO_USE_SSL=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=dev

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9464
GRAFANA_PASSWORD=your_grafana_password

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
NEXT_PUBLIC_GOOGLE_ANALYTICS=GA-XXXXXXXXX

# Error Tracking
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# CDN (Production)
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=https://static.yourdomain.com