# Production Environment Variables
NODE_ENV=production

# Database Configuration
POSTGRES_DB=tulumbak_prod
POSTGRES_USER=tulumbak_user
POSTGRES_PASSWORD=${DATABASE_PASSWORD}
DATABASE_URL=postgresql://tulumbak_user:${DATABASE_PASSWORD}@postgres:5432/tulumbak_prod

# Redis Configuration
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Authentication
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}
NEXTAUTH_URL=https://tulumbak.com
NEXTAUTH_SESSION_TIMEOUT=7d

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.tulumbak.com
NEXT_PUBLIC_WS_URL=wss://api.tulumbak.com

# Feature Flags
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_REALTIME_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_PAYMENTS_ENABLED=true
NEXT_PUBLIC_SEARCH_ENABLED=true

# Payment Providers (Production)
NEXT_PUBLIC_STRIPE_KEY=${STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
PAYTR_MERCHANT_ID=${PAYTR_MERCHANT_ID}
PAYTR_MERCHANT_KEY=${PAYTR_MERCHANT_KEY}
PAYTR_MERCHANT_SALT=${PAYTR_MERCHANT_SALT}

# Email Configuration
RESEND_API_KEY=${RESEND_API_KEY}
EMAIL_FROM=noreply@tulumbak.com

# SMS Configuration
NETGSM_USER=${NETGSM_USER}
NETGSM_PASSWORD=${NETGSM_PASSWORD}
NETGSM_HEADER=TULUMBAK

# File Storage
MINIO_ROOT_USER=${MINIO_ROOT_USER}
MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD}
MINIO_ENDPOINT=minio.tulumbak.com
MINIO_BUCKET=tulumbak-prod
MINIO_USE_SSL=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9464
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Security
CORS_ORIGIN=https://tulumbak.com
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/tulumbak.crt
SSL_KEY_PATH=/etc/nginx/ssl/tulumbak.key

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Analytics
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
NEXT_PUBLIC_GOOGLE_ANALYTICS=${GOOGLE_ANALYTICS_ID}

# Error Tracking
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production

# CDN
CDN_URL=https://cdn.tulumbak.com
STATIC_URL=https://static.tulumbak.com