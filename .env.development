# Development Environment Variables
NODE_ENV=development

# Database Configuration
POSTGRES_DB=tulumbak_dev
POSTGRES_USER=tulumbak_user
POSTGRES_PASSWORD=tulumbak_password
DATABASE_URL=postgresql://tulumbak_user:tulumbak_password@localhost:5432/tulumbak_dev

# Redis Configuration
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379

# Authentication
NEXTAUTH_SECRET=dev-secret-change-in-production-very-important
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SESSION_TIMEOUT=24h

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Feature Flags
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_REALTIME_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_PAYMENTS_ENABLED=true
NEXT_PUBLIC_SEARCH_ENABLED=true

# Payment Providers (Development)
NEXT_PUBLIC_STRIPE_KEY=pk_test_YOUR_STRIPE_TEST_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
PAYTR_MERCHANT_ID=YOUR_PAYTR_MERCHANT_ID
PAYTR_MERCHANT_KEY=YOUR_PAYTR_MERCHANT_KEY
PAYTR_MERCHANT_SALT=YOUR_PAYTR_SALT

# Email Configuration
RESEND_API_KEY=re_YOUR_RESEND_API_KEY
EMAIL_FROM=noreply@tulumbak.local

# SMS Configuration
NETGSM_USER=YOUR_NETGSM_USER
NETGSM_PASSWORD=YOUR_NETGSM_PASSWORD
NETGSM_HEADER=TULUMBAK

# File Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=tulumbak-dev
MINIO_USE_SSL=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9464

# Development Tools
ENABLE_CORS=true
ENABLE_DEBUG_ROUTES=true
ENABLE_SWAGGER=true